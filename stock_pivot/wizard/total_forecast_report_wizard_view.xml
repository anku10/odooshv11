<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_forecast_wizard" model="ir.ui.view">
            <field name="name">total.forecast.report.wizard</field>
            <field name="model">total.forecast.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Pay Fixation Warning">
                    <group>
                        <h4>
                            <p><b>Kindly click on "Open" Button to check Stock Level forecast</b></p>
                        </h4>
                    </group>
                    <group col="4">
                        <field name="name"  invisible="1"  />
                    </group>
                    <footer>
                        <button name="do_open"
                                string="Open" type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_forecast_wizard_wizard" model="ir.actions.act_window">
            <field name="name">Open Forecast</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">total.forecast.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_forecast_wizard"/>
            <field name="target">new</field>
        </record>

        <!--<menuitem id="menu_stock_total_forecast_wizard" parent="stock.menu_warehouse_report"  name="Pivot Stock Forecast Wizard" action="action_forecast_wizard_wizard" />-->

    </data>
</odoo>
