<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_tock_inventory_forecast_report_form" model="ir.ui.view">
        <field name="name">Product Template Stock Forecast Inventory</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options'][last()]" position="inside">
                <div>
                    <field name="is_forecast_report"/>
                    <label for="is_forecast_report"/>
                </div>
            </xpath>
            <div name="button_box" position="inside">
                <button type="object" name="action_stock_inventory_forecast"
                    attrs="{'invisible':[('is_forecast_report', '!=', True)]}"
                    class="oe_stat_button" icon="fa-building-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Inventory Forecast</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
